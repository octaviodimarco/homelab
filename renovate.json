{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "helm-releases": {
    "fileMatch": ["\\.yaml$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["\\.yaml$"],
      "matchStrings": [
        "image: (?<depName>.*?):(?<currentValue>.*?)(@(?<digest>sha256:[a-f0-9]{64}))?\\s"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Agrupar todas las actualizaciones de Helm",
      "matchManagers": ["helm-releases"],
      "groupName": "Flux HelmReleases"
    },
    {
      "description": "Agrupar todas las actualizaciones de im√°genes Docker",
      "matchManagers": ["regex", "kubernetes"],
      "groupName": "Docker Images"
    }
  ]
}
